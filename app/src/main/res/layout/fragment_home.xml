<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.m2dl.biophotoandro.homeFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:id="@+id/imageView"
        android:layout_gravity="left|top"
        android:src="@drawable/fleche_haut_gauche" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="right|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bonjour"
            android:id="@+id/textViewBonjour"
            android:textSize="30dp"
            android:layout_above="@+id/textViewUsername"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/textViewUsername"
            android:textColor="#ff17a013"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ouvrez le menu pour commencer"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_marginTop="87dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ff1a1a1a" />

    </RelativeLayout>
</FrameLayout>
